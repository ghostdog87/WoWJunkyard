@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<WoWJunkyard.Data.Models.Character>

@{
    ViewData["Title"] = "Characters";
    var page = 0;
}

<h1>Characters</h1>

<form asp-action="CharactersList" method="get">
    <div class="form-text">
        <p>
            Realm: <input type="text" name="realm" value="@ViewData["realm"]" />
            Name: <input type="text" name="characterName" value="@ViewData["characterName"]" />
            <input type="submit" value="Search" class="btn" /> |
        </p>
    </div>
</form>

@if (Model.Any())
{
    <table class="table table-striped table-dark table-hover">
        <thead>
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th>
                Character Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Realm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AchievementPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faction)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            page++;
            <tr>
                <td>
                    @Html.Raw(page)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Class)
                </td>
                <td>
                    <a asp-area="" asp-controller="Character" asp-route-id="@item.Id" asp-action="Character">@item.Name</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Realm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Race)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AchievementPoints)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Faction)
                </td>
            </tr>
        }
        </tbody>
    </table>
}

