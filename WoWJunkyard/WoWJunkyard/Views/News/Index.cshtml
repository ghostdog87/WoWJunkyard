@model IEnumerable<WoWJunkyard.Models.News.News>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row mb-2">
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-info text-white">Create New</a>
    }
</div>
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="row background-gray-dark border-primary border mb-2">
                <div class="col-3">
                    <img src="@item.Image" style="max-width: 350px; width: 100%" alt="" />
                </div>
                <div class="col-9">
                    <div class="row">
                        <a class="news-title" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                        <br><br>
                        <span style="color: #ffd100">
                            @Html.DisplayNameFor(modelItem => item.PostedOn)
                            @Html.DisplayFor(modelItem => item.PostedOn)
                        </span>
                    </div>
                </div>
            </div>
             @if (User.IsInRole("Admin"))
             {
                 <div class="row mb-2">
                     <div>
                         <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger">Edit</a>

                         <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                     </div>
                 </div>
             }
        }
    }
    else
    {
        <div class="text-warning text-center" style="font-size: 2em">
            No News
        </div>
    }

